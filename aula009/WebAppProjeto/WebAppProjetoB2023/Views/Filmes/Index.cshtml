@model IEnumerable<WebAppProjetoB2023.Models.Filme>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
    <p>
        @Html.ActionLink("Criar nova fabricante", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.FilmeId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.FilmeId }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.FilmeId })
                </td>
            </tr>
        }

    </table>
</body>
</html>

