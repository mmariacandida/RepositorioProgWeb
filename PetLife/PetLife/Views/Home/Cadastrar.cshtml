
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Página Inicial</title>
    <link rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/cadastrar.css">
    <script src="script.js"></script>
</head>
<body>
    <img src="~/Content/images/img cad 3.jpg" alt="">
    <img class="logo-img" src="~/Content/images/petlife.png">
    <section>
        <div class="login-box">
            <form action="">
                <h2>Cadastro</h2>
                <div class="input-box">
                    <span class="icon"> <ion-icon name="pencil-outline"></ion-icon> </span>
                    <input type="text" required>
                    <label>Nome</label>
                </div>
                <div class="input-box">
                    <span class="icon">
                        <ion-icon name="calendar-outline"></ion-icon>
                    </span>
                    <input type="date" required>
                </div>
                <div class="input-box">
                    <span class="icon"> <ion-icon name="finger-print-outline"></ion-icon> </span>
                    <input type="text" required>
                    <label>cpf</label>
                </div>
                <div class="input-box">
                    <span class="icon">
                        <ion-icon name="call-outline"></ion-icon>
                    </span>
                    <input type="tel" required>
                    <label>Telefone</label>
                </div>

                <div class="input-box">
                    <span class="icon"> <ion-icon name="mail"></ion-icon> </span>
                    <input type="Email" required>
                    <label>Email</label>
                </div>
                <div class="input-box">
                    <span class="icon"> <ion-icon name="lock-closed"></ion-icon></span>
                    <input type="Senha" required>
                    <label>Senha</label>
                </div>

                <button type="submit"> Entrar </button>
                <div class="register-link">
                    <p>Não tem conta?<a href="#"> Registrar </a> </p>
                </div>
            </form>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>

</body>
</html>